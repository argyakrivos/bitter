<h1>New Tweet</h1>
<% if flash[:warnings] %>
	<ul>
		<% flash[:warnings].each do |error| %>
			<li class="warning"><%= flash[:warnings][error].first %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for :tweet, :url => { :action => :create } do |f| %>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
